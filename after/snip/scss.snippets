snippet center "flex center" b
display: flex;
align-items: center;
justify-content: center;
endsnippet

snippet ! "!important"
!important;
endsnippet

snippet bef "before" b
&::before {
	content: ' ';
	position: absolute;
	display: inline-block;
}
endsnippet
snippet aft "&::after" b
&::after {
	content: ' ';
	position: absolute;
	display: inline-block;
}
endsnippet

snippet dib "d: inline-block" b
display: inline-block;
endsnippet

snippet wh "w, h: 100%" b
width:  ${1:100%};
height: ${2:100%};
endsnippet
snippet tl "top, left: 0" b
top:  ${1:0px};
left: ${2:0px};
endsnippet

snippet &: "&:hover..." 
&:${1:hover} {
}
endsnippet

snippet fg "color" b
color: ${1:#b4b2b0};
endsnippet
snippet bg "background" b
background-color: ${1:#b4b2b0};
endsnippet
